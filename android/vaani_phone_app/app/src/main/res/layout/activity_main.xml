<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#1a1a2e">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAANI Voice Assistant"
        android:textSize="28sp"
        android:textColor="#00d4ff"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100% Phone-Native Voice Control"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2d2d44"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="16sp"
                android:textColor="#888888"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/commandText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#00d4ff"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start Listening"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#00d4ff"
        android:textColor="#1a1a2e"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        android:layout_marginTop="32dp"/>

    <!-- Settings Button -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Open Accessibility Settings"
        android:textSize="16sp"
        android:backgroundTint="#2d2d44"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        android:layout_marginTop="16dp"/>

    <!-- Instructions -->
    <androidx.cardview.widget.CardView
        android:id="@+id/instructionsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2d2d44"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Example Commands"
                android:textSize="16sp"
                android:textColor="#00d4ff"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ &quot;Open WhatsApp&quot;\nâ€¢ &quot;Call 1234567890&quot;\nâ€¢ &quot;Scroll down&quot;\nâ€¢ &quot;Go back&quot;\nâ€¢ &quot;Read the screen&quot;"
                android:textSize="14sp"
                android:textColor="#cccccc"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
